        <org.projectlombok.version>1.18.20</org.projectlombok.version>
        <lombok-mapstruct-binding.version>0.2.0</lombok-mapstruct-binding.version>
        <sonar.coverage.exclusions>
            **/AuthorizationServerApplication.java,
            **/response/**,
            **/exception/**,
            **/authentication/tokens/**,
            **/AuthorizationConsentService.java,
            **/AuthorizationConsent.java,
            **/FederatedIdentityIdTokenCustomizer.java,
            **/UserRepositoryOauth2UserHandler.java,
            **/SecretEncoders.java
        </sonar.coverage.exclusions>

        <checkstyle.config.location>${project.basedir}/checkStyle.xml</checkstyle.config.location>
        <sonar.language>java</sonar.language>
        <sonar.java.checkstyle.reportPaths>${project.build.directory}/checkstyle-result.xml
        </sonar.java.checkstyle.reportPaths>
        <checkstyle.version>10.13.0</checkstyle.version>
        <maven.checkstyle.version>3.3.1</maven.checkstyle.version>
        <maven-source-plugin.version>3.3.1</maven-source-plugin.version>
        <maven-javadoc-plugin.version>3.11.2</maven-javadoc-plugin.version>
        <license-tool-plugin.version>1.1.0</license-tool-plugin.version>
        <skipDash>true</skipDash>
        <failWhenReviewNeeded>false</failWhenReviewNeeded>
        <maven-gpg-plugin.version>3.1.0</maven-gpg-plugin.version>
        <skipCheckstyle>false</skipCheckstyle>
        <skipJavadocs>false</skipJavadocs>
        <skipSource>false</skipSource>
        <skipGpgSign>true</skipGpgSign>
        <nexus-staging-maven-plugin.version>1.7.0</nexus-staging-maven-plugin.version>
        <skipNexusStaging>true</skipNexusStaging>


    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-parent</artifactId>
                <version>${spring.version}</version>
